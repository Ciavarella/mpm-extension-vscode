{
  "extends": ["tslint:latest", "tslint-config-prettier"],
  "rules": {
    "no-string-throw": true,
    "no-unused-expression": true,
    "no-duplicate-variable": true,
    "curly": true,
    "class-name": true,
    "semicolon": [true, "always"],
    "triple-equals": true,
    "no-console": false,
    "object-literal-sort-keys": false
  },
  "defaultSeverity": "warning"
}
